{
  "task_name": "cloudmusic",
  "description": "网易云音乐任务测试配置",
  
  "rules_base_dir": "task_rules/cloudmusic",
  "data_base_dir": "data/cloudmusic",
  
  "task_types": {
    "type1": {
      "name": "音乐播放任务",
      "rule_file": "cloudmusic-type1.yaml",
      "data_traces": [1, 2, 3, 4, 5, 6, 7, 8, 9],
      "description": "音乐播放相关功能测试"
    },
    "type2": {
      "name": "音乐搜索任务", 
      "rule_file": "cloudmusic-type2.yaml",
      "description": "音乐搜索功能测试"
    }
  },

  "test_options": {
    "enable_ocr": true,
    "enable_llm": true,
    "force_llm": false,
    "ocr_frame_exclusive": true,
    "llm_frame_exclusive": true,
    "prevent_frame_backtrack": true
  },

  "logging": {
    "level": "DEBUG",
    "use_colors": true,
    "show_time": true,
    "show_module": true,
    "output_file": "test-{task_name}-{timestamp}.log"
  },

  "output": {
    "summary_file": "test-{task_name}-summary-{timestamp}.txt",
    "detailed_results_file": "test-{task_name}-detailed-{timestamp}.json"
  }
}
