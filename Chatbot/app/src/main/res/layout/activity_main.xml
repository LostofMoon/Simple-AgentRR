<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.aichatbot.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/top_buttons_layout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent" />

    <!-- 顶部按钮布局容器 -->
    <RelativeLayout
        android:id="@+id/top_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/purple"
            android:text="清空"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/purple"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="我是你的智能手机助手\n如果要获取我的使用详情\n请点击右上角按钮（收回键盘）\n操作响应较慢，请耐心等待"
        android:textColor="#e61515ff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="8dp">

        <!-- 终止按钮 - 最左边 -->
        <Button
            android:id="@+id/copy_button"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/purple"
            android:contentDescription="Terminate Task"
            android:text="终止"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:visibility="visible"
            android:clickable="true"
            android:focusable="true" />

        <!-- 发送按钮 - 最右边 -->
        <Button
            android:id="@+id/send_btn"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/purple"
            android:contentDescription="Send Message"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:visibility="visible"
            android:clickable="true"
            android:focusable="true" />

        <!-- 输入框 - 占据中间空间 -->
        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/copy_button"
            android:layout_toLeftOf="@id/send_btn"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corner"
            android:textColor="#000000"
            android:inputType="text"
            android:padding="16dp" />

    </RelativeLayout>

</RelativeLayout>

</ScrollView>
